@model IEnumerable<Projekat_Hotel.Models.Rezervacija>

@{
    ViewBag.Title = "SviGosti";
}

<h2>Gosti</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GostID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gost.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gost.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gost.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SobaID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.GostID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gost.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gost.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gost.Email)
         </td>
        <td>
            @Html.DisplayFor(modelItem => item.SobaID)
        </td>
        
    </tr>
}

</table>
