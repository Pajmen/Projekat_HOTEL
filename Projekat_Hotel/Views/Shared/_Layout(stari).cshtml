    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Madrigal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                @if (Session["UserId"] != null)
                {
                    var uloga = Session["Privilegije"].ToString();
                    if (uloga == "1")
                    {
                        <ul class="nav navbar-nav ">
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Zaposleni", "SviRadnici", "Radnik")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Sobe", "Index", "Sobas")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Rezervacije", "SveRezervacije", "Rezervacija")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Gosti", "SviGosti", "Gost")
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Usluge", "SveUsluge", "Usluga")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Racuni", "SviRacuni", "Racun")
                            </li>
                        </ul>
                    }
                    else if (uloga == "2")
                    {
                        <ul class="nav navbar-nav ">
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Zaposleni", "SviZaposleni", "Manager")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Sobe", "SveSobe", "Manager")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Gosti", "SviGosti", "Manager")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Računi", "Sviracuni", "Manager")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Rezervacije", "Index", "Rezervacije")
                            </li>

                        </ul>
                    }
                    else if (uloga == "3")
                    {
                        <ul class="nav navbar-nav ">
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Zaposleni", "SviZaposleni", "Recepcija")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Sobe", "SveSobe", "Recepcija")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Usluge", "SviGosti", "Recepcija")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Računi", "SviRacuni", "Recepcija")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Rezervacije", "Index", "Recepcija")
                            </li>
                        </ul>
                    }
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item nav-link navbar-right">
                            <label style="color: white"> @Session["Ime"]</label> @Html.ActionLink("Logout", "Logout", "Login")
                        </li>
                    </ul>

                }
                else
                {

                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item nav-link navbar-right">
                            @Html.ActionLink("Login", "Index", "Login")
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ivanov, Bojanov i Pavlov završni rad</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
